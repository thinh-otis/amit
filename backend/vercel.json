{
  "version": 2,
  "builds": [
    {
      "src": "./index.js",  // Đảm bảo rằng đây là file chính khởi động ứng dụng
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",  // Chuyển hướng tất cả các yêu cầu bắt đầu bằng /api đến ứng dụng
      "dest": "/index.js"
    },
    {
      "src": "/(.*)",  // Tất cả các yêu cầu khác sẽ chuyển đến ứng dụng
      "dest": "/index.js"
    }
  ]
}
